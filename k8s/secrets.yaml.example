# Example secrets configuration
# Copy to secrets.yaml and fill in your actual values
# DO NOT commit secrets.yaml to git

apiVersion: v1
kind: Secret
metadata:
  name: ragents-secrets
  namespace: production
type: Opaque
stringData:
  openai-api-key: "sk-proj-..."  # Your OpenAI API key
  anthropic-api-key: "sk-ant-..."  # Your Anthropic API key
  opik-api-key: "..."  # Your Opik API key (optional)
  postgres-url: "postgresql://user:password@postgres-service:5432/ragents"
